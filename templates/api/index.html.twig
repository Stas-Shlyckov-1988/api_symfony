{% extends 'base.html.twig' %}

{% block title %}API!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>API! ✅</h1>

    Application programming interface:
    <ul>
        <li>Список категорий <code><a target="_blank" href="{{ path('category') }}">{{ path('category') }}</a></code></li>
        <li>Категория по номеру <code><a target="_blank" href="{{ path('category', {id: 2}) }}">{{ path('category', {id: 2}) }}</a></code></li>
        <li>Категория по имени <code><a target="_blank" href="{{ path('category', {name: 'test'}) }}">{{ path('category', {name: 'test'}) }}</a></code></li>
        <li>Список статей <code><a target="_blank" href="{{ path('article') }}">{{ path('article') }}</a></code></li>
        <li>Статья по номеру <code><a target="_blank" href="{{ path('article', {id: 2}) }}">{{ path('article', {id: 2}) }}</a></code></li>
    </ul>
</div>
{% endblock %}
